{
  "name": "Swift",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "lldb.adapterType": "bundled",
        "lldb.executable": "/usr/bin/lldb",
        "terminal.integrated.defaultProfile.linux": "/bin/bash",
      },
      "extensions": [
        "sswg.swift-lang"
      ],
    }
  },
}